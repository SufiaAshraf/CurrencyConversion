<!DOCTYPE html>
<html lang="en">
<head>
    <title>Currency Converter</title>
    <style>
        body {
             background-image: url(https://ak1.picdn.net/shutterstock/videos/23155921/thumb/1.jpg);
        }

        h2 {
            font-weight: 400;
            font-size: 1.5em;
        }

        #box {
            width: 400px;
            height: 150px;
            margin: 200px auto;
            border: 2px solid black;
            background-color: floralwhite;
            text-shadow: 0px 4px 3px rgba(0,0,0,0.4),
                        0px 8px 13px rgba(0,0,0,0.1),
                        0px 18px 23px rgba(0,0,0,0.1);
                        
        }
        .content{
            /* padding-top: 10%; */
            text-decoration-color: darkslategray;
            text-align: center;
            text-shadow: 0px 4px 3px rgba(0,0,0,0.4),
                        0px 8px 13px rgba(0,0,0,0.1),
                        0px 18px 23px rgba(0,0,0,0.1);
                        
        } 
        h2{
            text-align: center;
        }
        table{
           
            margin: auto auto;
        }
        
        hr {
            width: 250px;
            border-top: 1px solid #f8f8f8;
            border-bottom: 1px solid rgba(0,0,0,0.2);
            padding-bottom: 0.1%;
            padding-top: 0.01%;
        }
        body,
            html {
                width: 100%;
                height: 100%;
                font-family: "Arial";
                color: rgb(8, 5, 5);
            }

    </style>
    <script>
        function convertCurrency(){
            var from = document.getElementById("from").value;
            var to   = document.getElementById("to").value;
            var xmlhttp = new XMLHttpRequest();
            var url   = "http://data.fixer.io/api/latest?access_key=<YOUR ACCESS KEY>" + "&" + "base =" + from + "& symbols =" +to;
            xmlhttp.open("GET", url, true);
            xmlhttp.send();
            xmlhttp.onreadystatechange = function(){
                if(xmlhttp.readyState == 4 && xmlhttp.status == 200){
                    var result = xmlhttp.responseText;
                    var jsReult = JSON.parse(result);
                    var oneUnit = jsReult.rates[to]/jsReult.rates[from];
                    var amt = document.getElementById("fromAmount").value;
                    document.getElementById("toAmount").value = (oneUnit*amt).toFixed(2);
                }
            }
        }
    </script>
</head>
<body onload="convertCurrency();">
   <div  id="box">
       <h2 class="content" >Currency Converter</h2>
       <hr>
       <table>
           <tr>
               <td><input placeholder="To Amount" type="text" size="15" id="fromAmount" value="1" onkeyup="convertCurrency();"></td>
               <td>
                   <select name="" id="from" onchange="convertCurrency();">
                        <option value="AUD">Australian Dollar(AUD)</option>
                        <option value="BGN">Bulgarian Lev (BGN)</option>
                        <option value="CAD">Canadian Dollar(CAD)</option>
                        <option value="CHF">Swiss Frac(CHF)</option>
                        <option value="DKK">Danish Krone(DKK)</option>
                        <option value="GBP">Pound Sterling(GBP)</option>
                        <option value="ILS">Israeli New Shekel(ILS)</option>
                        <option value="INR">Indian Rupee(INR)</option>
                        <option value="JPY">Japanese Yen (JPY)</option>
                        <option value="PHP">Phillipine Peso (PHP)</option>
                        <option value="RUB">Russian Rubble(RUB)</option>
                        <option value="USD" selected>United States Dollar(USD)</option>
                   </select>

               </td>
           </tr>
           <tr>
                <td><input placeholder="To Amount" type="text" size="15" id="toAmount" disabled></td>
                <td>
                    <select name="" id="to">
                         <option value="AUD">Australian Dollar(AUD)</option>
                         <option value="BGN">Bulgarian Lev (BGN)</option>
                         <option value="CAD">Canadian Dollar(CAD)</option>
                         <option value="CHF">Swiss Frac(CHF)</option>
                         <option value="DKK">Danish Krone(DKK)</option>
                         <option value="GBP">Pound Sterling(GBP)</option>
                         <option value="ILS">Israeli New Shekel(ILS)</option>
                         <option value="INR" selected>Indian Rupee(INR)</option>
                         <option value="JPY">Japanese Yen (JPY)</option>
                         <option value="PHP">Phillipine Peso (PHP)</option>
                         <option value="RUB">Russian Rubble(RUB)</option>
                         <option value="USD" >United States Dollar(USD)</option>
                    </select>
 
                </td>
            </tr>
       </table>
   </div> 
</body>
</html>
